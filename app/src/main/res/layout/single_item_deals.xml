<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contact_select_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.15"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"/>

        <ImageView
            android:layout_width="@dimen/single_img_height"
            android:layout_height="@dimen/single_img_height"
            android:background="@drawable/deals_round"/>
        <Space
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

                <TextView
                    android:id="@+id/dealname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:layout_weight="1"
                    android:textColor="#6C6C6C"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/adress_singe"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:layout_weight="1"
                    android:textColor="#6C6C6C"
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:visibility="invisible"
                    />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <TextView
                android:id="@+id/deal_hot"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="Phone no."
                android:textColor="#cecece"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/date_deal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="email"
                android:textColor="#cecece"
                android:textSize="15dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/asso_deal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="email"

                android:textColor="#cecece"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/deal_amot"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="email"

                android:textColor="#cecece"
                android:textSize="15dp" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
